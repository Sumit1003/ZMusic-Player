{
  "name": "music-player-backend",
  "version": "1.0.0",
  "description": "ðŸŽµ Advanced Music Player REST API built with Express, MongoDB, and Node.js.",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --env-file .env server.js",
    "seed": "node seed/seedData.js",
    "reseed": "node seed/seedData.js && npm run dev",
    "lint": "eslint . --ext .js",
    "clean": "rimraf ./logs ./temp",
    "test": "echo \"ðŸš« No test configured yet.\" && exit 0"
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "music-player",
    "nodejs",
    "backend",
    "api",
    "rest-api"
  ],
  "author": "Sumit (MERN Developer)",
  "license": "MIT",
  "dependencies": {
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "mongodb": "^6.20.0",
    "mongoose": "^8.6.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "config": "config",
    "routes": "routes",
    "models": "models",
    "public": "public",
    "seed": "seed"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "routes",
      "models",
      "config"
    ],
    "ext": "js,json",
    "ignore": [
      "public",
      "node_modules"
    ],
    "delay": "300",
    "exec": "node server.js"
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "quotes": [
        "warn",
        "double"
      ],
      "semi": [
        "warn",
        "always"
      ]
    }
  }
}
